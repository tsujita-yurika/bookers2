<div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>

        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit class: "btn btn-success btn-sm btn-block mb-3" do %>Updatete Book
          <% end %>
        <% end %>

      </div>
    </div>
</div>