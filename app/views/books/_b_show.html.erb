        <div class="col-md-3">
          <h2>User info</h2>

          <table class="table">
              <tbody>
                <tr></tr>
                <tr>
              	  <th>name</th>
              	   <% if book.present?%>
                    <th><%= book.user.name %></th>
                   <% else %>
              	    <th><%=user.name %></th>
              	   <% end %>
                </tr>
                <tr>
              	  <th>introduction</th>
              	   <% if book.present?%>
                     <th><%= book.user.introduction%></th>
                   <% else %>
              	     <th><%=user.introduction%></th>
              	   <% end %>
                </tr>
              </tbody>
          </table>

          <div class="row">
             <div class="col-md-12">
            <%= link_to edit_user_path(user),class:"col-md-12 btn btn-outline-secondary" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
             </div>
           <br>


            <div>
             <h2 class="mt-3">New book</h2>
              <%= form_with model: newbook, local: true  do |f| %>
              <div class="from-group">
                 <storong>Title</storong>
                  <%= f.text_field :title, class:"form-control book_title"%><br>
              </div>
              <div class="from-group">
                <storong>Opinion</storong>
                <%= f.text_area :body, class:"form-control book_body" %><br>
              </div>
                <%= f.submit 'Create Book',class:"btn btn-success" %><br>
              <% end %>
            </div>

       </div>
    </div>