
      <div class="col-md-3">
          <h2>User info</h2>
          　<% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
              <% end %>

<!--それぞれuser-->
          <table class="table">
              <tbody>
                <tr></tr>
                <tr>
              	  <th>name</th>
              	   <% if book.present?%>
                    <th><%= book.user.name %></th>
                   <% else %>
              	    <th><%=user.name %></th>
              	   <% end %>
                </tr>
                <tr>
              	  <th>introduction</th>
              	   <% if book.present?%>
                     <th><%= book.user.introduction%></th>
                   <% else %>
              	     <th><%=user.introduction%></th>
              	   <% end %>
                </tr>
              </tbody>
          </table>

        <div class="row">
             <div class="col-md-12">
            <%= link_to edit_user_path(user),class:"col-md-12 btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
        </div>

<!--投稿機能-->
        <div class = "row">
          <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
            <i class = "fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2 class = "mt-3">New book</h2>

        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit class: "btn btn-success btn-sm btn-block mb-3" do %>Create Book
          <% end %>
        <% end %>
      </div>