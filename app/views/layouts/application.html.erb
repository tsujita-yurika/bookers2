<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/83655083cf.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
  <nav class = "navbar navbarexpand-lg navbar-dark">
    <div class = "container">
      <a class = "navbar-brand" href = "/">
        <span>Bookers</span>
      </a>
      <button class = "navbar-toggler">


    <span class="title">Bookers</span>
    <%= link_to "Bookers", root_path %>

    <% if user_signed_in? %>
      <li>
        <%= link_to root_path do %>
          <i class = "fa-solid fa-home"></i>Home
        <% end %>
      </li>
      <li>
        <%= link_to users_path do %>
          <i class = "fa-solid fa-users"></i>Users
        <% end %>
      </li>
      <li>
        <%= link_to books_path  do %>
          <i class = "fa-solid fa-book-open"></i>Books
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class = "fa-solid fa-sign-out-alt"></i>Log out
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to root_path do %>
          <i class = "fa-solid fa-home"></i>Home
        <% end %>
      </li>
      <li>
        <%= link_to homes_about_path do %>
          <i class = "fa-solid fa-link"></i>About
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path do %>
          <i class = "fa-solid fa-user-plus"></i>Sign up
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path do %>
          <i class = "fa-solid fa-sign-in-alt"></i>Log in
        <% end %>
      </li>
    <% end %>

    </div>
  </nav>
  </header>

        </a>
      <div>

  <main>
    <%= yield %>
  </main>

  <footer>
    <div class = 'container mt-5'>
      <div class = 'row'>
         <div class = 'mx-auto' style = "margin-top:auto;">
       		<p>CopyRight Infratop.inc</p>
       	</div>
      </div>
    </div>
  </footer>

  </body>
</html>
